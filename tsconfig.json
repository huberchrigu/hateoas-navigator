{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "hateoas-navigator": [
        // Uncomment to following line to test changes with "ng serve"
//        "libs/hateoas-navigator/src/public-api.ts"
        // Comment the following two lines instead
                "dist/hateoas-navigator/hateoas-navigator",
                "dist/hateoas-navigator"
      ],
      "resource-components": [
        // Uncomment to following line to test changes with "ng serve"
        //        "libs/resource-components/src/public-api.ts"
        // Comment the following two lines instead
        "dist/resource-components/resource-components",
        "dist/resource-components"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
